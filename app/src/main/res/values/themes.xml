<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:backgroundTint">@color/white</item>
        <!--<item name="android:windowBackground">#FF2C163C</item>-->
    </style>

    <style name="icon">
        <item name="android:backgroundTint">@color/Saff_yellow</item>
    </style>


    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="cardView" parent="Base.Theme.ToDoApp">
        <item name="android:backgroundTint">@color/daisy</item>
    </style>

    <style name="cardView2" parent="Base.Theme.ToDoApp">
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/font3</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="buttonAddTask">
        <item name="android:backgroundTint">@color/Saff_yellow</item>
        <item name="android:src">@drawable/baseline_add_24</item>
    </style>




</resources>